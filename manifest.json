{
  "manifest_version": 2,
  "name": "TodoMaster",
  "version": "1.1.0",
  "description": "A modern, lightweight todo manager for Firefox with privacy-focused local storage and advanced task management.",
  "permissions": [
    "storage"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TodoMaster",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "content_security_policy": "script-src 'self'; object-src 'self'; style-src 'self' 'unsafe-inline';",
  "web_accessible_resources": [
    "icons/icon-*.png"
  ]
}