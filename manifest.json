{
  "manifest_version": 2,
  "name": "TodoMaster",
  "version": "1.0.0",
  "description": "A modern, lightweight todo manager with task tracking and notes",
  
  "permissions": [
    "storage"
  ],
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "TodoMaster",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  }
}
